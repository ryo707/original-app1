<div class="contents row">
  <% @posts.each do |post| %>
   <div class="content_post" style="background-image: url(<%= post.image %>);">
      <div class="more">
        <span><%= image_tag 'sozai_cman_jp_20210807011101.png' %></span>
        <ul class="more_list">
          <li>
            <%= link_to '削除', "/posts/#{post.id}", method: :delete %>
          </li>
        </ul>
      </div>
      <p><%= post.title %></p>
      <span class="name">
        <%= post.nickname %>
      </span>
   </div>
  <% end %>
</div>